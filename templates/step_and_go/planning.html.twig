{% block javascripts %}
<script>
    window.onload = () => {
        let calendarElt = document.getElementById('calendar');
        let calendar = new FullCalendar.Calendar(calendarElt, {
            initialView: 'timeGridWeek',
            locale: 'fr',
            timezone: 'Europe/Paris',
            headerToolbar: {
                start: 'prev,next today',
                center: 'title',
                end: 'timeGridWeek,timeGridDay'
            },
            buttonText: {
                today: 'Aujourd\'hui',
                week: 'Semaine',
                day: 'Jour',
            },
            events: {{ data|raw }}
        });
        calendar.render();
    };
</script>
{% endblock %}