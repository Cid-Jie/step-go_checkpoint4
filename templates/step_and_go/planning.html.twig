{% extends 'base.html.twig' %}

{% block title %}Planning{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('planning') }}
{% endblock %}

{% block body %}
    <main class="container">
    
        <div id="planning-container">
            <Planning></Planning>
        </div>

        <h1 class="text-center mt-5 mb-5">Planning de l'ann√©e</h1>

        <div class="table-responsive">
            <table class="table table-hover mb-5">
                <thead>
                <tr class="text-center">
                    <th scope="col">Horaires / Jour</th>
                    <th scope="col">Lundi</th>
                    <th scope="col">Mardi</th>
                    <th scope="col">Mercredi</th>
                    <th scope="col">Jeudi</th>
                    <th scope="col">Vendredi</th>
                </tr>
                </thead>
                <tbody>
                <tr class="text-center">
                    <th scope="row">18h <br/>-<br/> 19h</th>
                    {% for event in events %}
                        {% if event.hoursOfDay == 1 %}
                            <td>{% if event.daysOfWeek == 1 %}<span
                                        class="event-title">{{ event.danceClasses.name }}</span><br><span
                                        class="event-description">{{ event.description }}</span>{% endif %}</td>
                            <td>{% if event.daysOfWeek == 2 %}<span
                                        class="event-title">{{ event.danceClasses.name }}</span><br><span
                                        class="event-description">{{ event.description }}</span>{% endif %}</td>
