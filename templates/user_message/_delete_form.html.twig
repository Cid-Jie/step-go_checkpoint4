<form method="post" action="{{ path('app_user_message_delete', {'id': user_message.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_message.id) }}">
    <p class="text-center mt-5 mb-5">
        <button class="button-delete-message">Delete</button>
    </p>
</form>
