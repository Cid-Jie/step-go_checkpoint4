{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
<main class="container">
    <h1 class="text-center mt-5 mb-5">Evénement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ event.start ? event.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ event.end ? event.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ event.color }}</td>
            </tr>
        </tbody>
    </table>
    <p class="text-center mt-5 mb-5">
       <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn">Modifier</a>
    </p>
    {{ include('event/_delete_form.html.twig') }}

    <p class="mt-5 mb-5">
       <a href="{{ path('app_event_index') }}">Retour à la liste des événements</a>
    </p>
</main>
{% endblock %}
